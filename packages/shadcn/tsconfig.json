{
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
